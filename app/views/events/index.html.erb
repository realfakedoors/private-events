<h1>All Events</h1>

<table>
  <tr>
    <td><strong>Name</strong></td>
    <td><strong>Location</strong></td>
    <td><strong>Date/Time</strong></td>
  </tr>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.location %></td>
      <td><%= event.datetime %></td>
    </tr>
  <% end %>
</table>