<header>
  <div>
    <% if logged_in? %>
      <% user = current_user %>
      
      <h2><%= user.name %></h2>
      <span><%= link_to "Profile", user %></span>
      <span><%= link_to "Dashboard", dashboard_path %></span>
      <span><%= link_to "All Events", events_path %></span>
      <span><%= link_to "Log out", logout_path, method: :delete %></span>
    <% else %>
      <span><%= link_to "Log in" , login_path,  method: :get %></span>
    <% end %>
  </div>
</header>